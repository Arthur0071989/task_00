#######################################################
##########        BEGIN User part            ##########
##########       You can change it           ##########
#######################################################
CFLAGS = 
LDFLAGS =  -lpthread
SOURCES = src/main.c
NAME = prog
#######################################################
##########        END User part              ##########
#######################################################

#######################################################
##########      BEGIN Automation part        ##########
##########     You shouldn't change it       ##########
#######################################################
OBJECTS = $(SOURCES:.c=.o)

all: $(NAME)

$(NAME): $(OBJECTS) 
	$(CC) $(OBJECTS) $(LDFLAGS) -o $(NAME)

libperson:
	make -C ../lib_person

%.o: %.c
	$(CC) -c $(CFLAGS) $< -o $@

clean:
	rm -f $(OBJECTS)
	rm -f $(NAME)
#######################################################
##########       END Automation part         ##########
#######################################################

